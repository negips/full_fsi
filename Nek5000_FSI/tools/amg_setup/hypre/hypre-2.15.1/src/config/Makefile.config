HYPRE_LIB_SUFFIX = .a

.SUFFIXES:
.SUFFIXES: .o .f .c .C .cxx .cc .cu

.f.o:
	$(FC) $(FFLAGS) -c $< 
.c.o:
	$(CC) $(CFLAGS) -c $< 
.C.o:
	$(CXX) $(CXXFLAGS) -c $<
.cxx.o:
	$(CXX) $(CXXFLAGS) -c $<
.cc.o:
	$(CXX) $(CXXFLAGS) -c $<
#.cu.o:
#	$(CUCC) $(CUFLAGS) -c $<

FC       = /usr/bin/gfortran
FFLAGS   = -O -g -O2 $(FC_COMPILE_FLAGS)

CC       = /usr/bin/gcc
CFLAGS   = -mcmodel=medium  -DHAVE_CONFIG_H $(C_COMPILE_FLAGS)

CXX      = icpc
CXXFLAGS = -O2  -DHAVE_CONFIG_H $(CXX_COMPILE_FLAGS)

#CUCC     = 
#CUFLAGS  =  -DHAVE_CONFIG_H ${CU_COMPILE_FLAGS}

